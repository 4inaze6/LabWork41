<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu x:Name="MainMenu" DockPanel.Dock="Left" Width="100">
            <Button x:Name="BurgerButton"  Height="80" Width="80" Click="HamburgerButton_Click">
                <Image Source="/гамбургер.png"/>
                
            </Button>
            <StackPanel x:Name="BurgerStackPanel" Width="80">
                <Label Content="Моя страница" FontSize="15" Margin="8"/>
                <Label Content="Музыка" FontSize="15" Margin="8"/>
                <Label Content="Фото" FontSize="15" Margin="8"/>
                <Label Content="Другое" FontSize="15" Margin="8"/>
            </StackPanel>
        </Menu>
        <TextBlock/>
    </DockPanel>
</Window>
